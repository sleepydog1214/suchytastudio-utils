doctype html
html
  head
    title Suchyta Studio Utilities
    meta(charset='utf-8')
    meta(name='viewport', content='width=500, initial-scale=1.0')
    link(href='https://fonts.googleapis.com/css?family=Ubuntu:400,700|Viga', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='/stylesheets/normalize.css')
    link(rel='stylesheet', href='/stylesheets/main.css')
    link(rel='stylesheet', href='/stylesheets/responsive.css')
    block stylesheet

  body
    header
      #logo
        a(href="index")
          ul
            li
              img(src='/images/logo3.png', alt='Suchyta Studio Utils')
            li
              h1 suchyta studio utilities
      nav
        ul
          - sites = [{"pg" : "index", "name" : "Home"}, {"pg" : "about", "name" : "About"}, {"pg" : "photos", "name" : "Photos"}, {"pg" : "art", "name" : "Art"}, {"pg" : "util", "name" : "Utilities"}];
          each site in sites
            li
              if pagename && site.pg === pagename
                a(href=site.pg, class='selected') #{site.name}
              else
                a(href=site.pg) #{site.name}
          li
            if pagename && pagename === "login"
              a(href='login', class='selected') #{loginsite}
            else
              a(href='login') #{loginsite}
            p #{username}

    section
      #editStatus
        p
      block content

    footer
       p &copy; 2015 Thomas Suchyta
       a(href="https://www.facebook.com/suchytastudio")
         img(src="images/FB-f-Logo__blue_72.png", alt="Facebook Logo", class="social-icon")
       a(href="https://twitter.com/suchytastudio")
         img(src="images/TwitterLogo_55acee.png", alt="Twitter Logo", class="social-icon")
